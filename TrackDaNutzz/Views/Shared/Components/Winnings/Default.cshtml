@model TrackDaNutzz.ViewComponents.WinningsViewComponentViewModel
<div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-left-primary shadow h-100 py-2">
        <div class="card-body">
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1 text-center">
                        @Model.TotalOrAverage @Model.WinningsType Won
                    </div>
                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1 text-center">
                        For @(Math.Abs(Model.TimePeriodCount)) @(Math.Abs(Model.TimePeriodCount) >= 2 ? Model.TimePeriod + "s" : Model.TimePeriod)
                    </div>
                    <div class="h5 mb-0 font-weight-bold text-gray-800 text-center">@Model.Winnings.ToString("0.00")</div>
                </div>
                <div class="col-auto">
                    <i class="fas fa-calendar fa-2x text-gray-300"></i>
                </div>
            </div>
        </div>
    </div>
</div>