@using TrackDaNutzz.ViewModels
@using TrackDaNutzz.Helpers
@model StatisticsAllViewModel
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Area Chart</h6>
    </div>
    <div class="card-body">
        <div class="chart-area">
            <canvas id="myAreaChart"></canvas>
        </div>
        <hr>
        Styling for the area chart can be found in the <code>/js/demo/chart-area-demo.js</code> file.
    </div>
</div>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Players</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Player Name
                        </th>
                        <th>
                            Hands Played
                        </th>
                        <th>
                            $ Won (T / A)
                        </th>
                        <th>
                            BB Won (T / A)
                        </th>
                        <th>
                            VPIP
                        </th>
                        <th>
                            PFR
                        </th>
                        <th>
                            3B
                        </th>
                        <th>
                            4B
                        </th>
                        <th>
                            AF
                        </th>
                        <th>
                            CB
                        </th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            Player Name
                        </th>
                        <th>
                            Hands Played
                        </th>
                        <th>
                            $ Won (T / A)
                        </th>
                        <th>
                            BB Won (T / A)
                        </th>
                        <th>
                            VPIP
                        </th>
                        <th>
                            PFR
                        </th>
                        <th>
                            3B
                        </th>
                        <th>
                            4B
                        </th>
                        <th>
                            AF
                        </th>
                        <th>
                            CB
                        </th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model.StatisticsAllByPlayerNameViewModels)
                    {
                    <tr>
                        <td>@item.PlayerName</td>
                        <td>@item.HandsPlayed</td>
                        <td>$@item.MoneyWon.ToString("0.00") / $@(MathOperations.Divide(item.MoneyWon, item.HandsPlayed).ToString("0.00"))</td>
                        <td>@item.BigBlindsWon.ToString("0.00") / @(MathOperations.Divide(item.BigBlindsWon, item.HandsPlayed).ToString("0.00"))</td>
                        <td>@((MathOperations.Divide(item.VoluntaryPutMoneyInPot, item.HandsPlayed) * 100).ToString("0.00"))</td>
                        <td>@((MathOperations.Divide(item.PreFlopRaise, item.HandsPlayed) * 100).ToString("0.00"))</td>
                        <td>@((MathOperations.Divide(item.ThreeBet, item.HandsPlayed) * 100).ToString("0.00"))</td>
                        <td>@((MathOperations.Divide(item.FourBet, item.HandsPlayed) * 100).ToString("0.00"))</td>
                        <td>@(item.AggressionFactor.ToString("0.00"))</td>
                        <td>@((MathOperations.Divide(item.ContinuationBet, item.HandsPlayed) * 100).ToString("0.00"))</td>
                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>